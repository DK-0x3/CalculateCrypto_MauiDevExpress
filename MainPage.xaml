    <Grid x:Name="MainGrid">
        <Grid x:Name="StartGrid" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <Frame x:Name="FrameToCopy" Opacity="0" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="1" VerticalOptions="End" Margin="0,0,0,10" HorizontalOptions="Center" HeightRequest="30" WidthRequest="145" BackgroundColor="#e0e0e0">
                <Label Text="Скопировано" FontSize="15" TextColor="Black" FontAttributes="Bold" HeightRequest="30" VerticalOptions="Center" HorizontalOptions="Center" />
            </Frame>

            <ImageButton BackgroundColor="Transparent" Margin="20"
                         Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
                         Source="calculate.svg" 
    />
            <ImageButton Clicked="Get_transf_Grid" BackgroundColor="Transparent" Grid.ColumnSpan="2"
                         Grid.Column="1" Grid.Row="0" Margin="20"
                         Source="transf.svg" 
    />
            <ImageButton BackgroundColor="Transparent" Grid.ColumnSpan="2"
                         Grid.Column="2" Grid.Row="0" Clicked="Get_Crypto_Grid"
                         Source="rub.svg" Margin="20"
    />
            <Grid Grid.Column="3" RowDefinitions="*,*,*" ColumnDefinitions="*,*,*,*">
                <ImageButton x:Name="BtnTheme" Source="moontheme.svg" Grid.Column="2" Grid.RowSpan="2" Clicked="ClickTheme"/>
            </Grid>


            <Grid Grid.Row="2" Grid.ColumnSpan="3" RowDefinitions="*,*,*,*" ColumnDefinitions="*,*,*,*,*,*,*,*,*,*,*,*">
                <ImageButton Clicked="Click_DelAll" Source="delall.svg" 
                             Grid.Row="1" Grid.Column="1"  Grid.ColumnSpan="2" Grid.RowSpan="2"
                />
                <ImageButton Clicked="Click_Del" Source="del.svg"
                             Grid.Row="1" Grid.Column="5"  Grid.ColumnSpan="2" Grid.RowSpan="2"
                />
                <ImageButton Source="copy.svg" Clicked="Click_Copy"
                             Grid.Row="1" Grid.Column="9"  Grid.ColumnSpan="2" Grid.RowSpan="2"
                />
            </Grid>




            <Button Clicked="Button_Clicked" Text="÷" TextColor="#1C274C" BackgroundColor="Transparent"
        HeightRequest="50" WidthRequest="50" Grid.Column="3" Grid.Row="2"
            FontSize="50" Padding="0"
    />
            <Button Clicked="Button_Clicked" Text="1" TextColor="Black" BackgroundColor="Transparent"
        HeightRequest="50" WidthRequest="80" Grid.Column="0" Grid.Row="3"
            FontAttributes="Bold" FontSize="30" Padding="0"
    />
            <Button Clicked="Button_Clicked" Text="2" TextColor="Black" BackgroundColor="Transparent"
        HeightRequest="50" WidthRequest="80" Grid.Column="1" Grid.Row="3"
            FontAttributes="Bold" FontSize="30" Padding="0"
    />
            <Button Clicked="Button_Clicked" Text="3" TextColor="Black" BackgroundColor="Transparent"
        HeightRequest="50" WidthRequest="80" Grid.Column="2" Grid.Row="3"
            FontAttributes="Bold" FontSize="30" Padding="0"
    />
            <Button Clicked="Button_Clicked" Text="4" TextColor="Black" BackgroundColor="Transparent"
        HeightRequest="50" WidthRequest="80" Grid.Column="0" Grid.Row="4"
            FontAttributes="Bold" FontSize="30" Padding="0"
    />
            <Button Clicked="Button_Clicked" Text="5" TextColor="Black" BackgroundColor="Transparent"
        HeightRequest="50" WidthRequest="80" Grid.Column="1" Grid.Row="4"
            FontAttributes="Bold" FontSize="30" Padding="0"
    />
            <Button Clicked="Button_Clicked" Text="6" TextColor="Black"  BackgroundColor="Transparent"
        HeightRequest="50" WidthRequest="80" Grid.Column="2" Grid.Row="4"
            FontAttributes="Bold" FontSize="30" Padding="0"
    />
            <Button Clicked="Button_Clicked" Text="7" TextColor="Black"  BackgroundColor="Transparent"
        HeightRequest="50" WidthRequest="80" Grid.Column="0" Grid.Row="5"
            FontAttributes="Bold" FontSize="30" Padding="0"
    />
            <Button Clicked="Button_Clicked" Text="8" TextColor="Black" BackgroundColor="Transparent"
        HeightRequest="50" WidthRequest="80" Grid.Column="1" Grid.Row="5"
            FontAttributes="Bold" FontSize="30" Padding="0"
    />
            <Button Clicked="Button_Clicked" Text="9" TextColor="Black" BackgroundColor="Transparent"
        HeightRequest="50" WidthRequest="80" Grid.Column="2" Grid.Row="5"
            FontAttributes="Bold" FontSize="30" Padding="0"
    />
            <Button Clicked="Button_Clicked" Text="×" TextColor="#1C274C" BackgroundColor="Transparent"
        HeightRequest="50" WidthRequest="50" Grid.Column="3" Grid.Row="3"
            FontSize="50" Padding="0"
    />
            <Button Clicked="Button_Clicked" Text="+" TextColor="#1C274C" BackgroundColor="Transparent"
        HeightRequest="50" WidthRequest="50" Grid.Column="3" Grid.Row="4"
            FontSize="50" Padding="0"
    />
            <Button Clicked="Button_Clicked" Text="—" TextColor="#1C274C" BackgroundColor="Transparent"
        HeightRequest="50" WidthRequest="50" Grid.Column="3" Grid.Row="5"
            FontAttributes="Bold" FontSize="30" Padding="0"
    />
            <Button Clicked="Button_Clicked" Text="0" TextColor="Black"  BackgroundColor="Transparent"
        HeightRequest="50" WidthRequest="80" Grid.Column="1" Grid.Row="6"
            FontAttributes="Bold" FontSize="30" Padding="0"
    />
            <Button Clicked="Button_Clicked" Text="," TextColor="Black"  BackgroundColor="Transparent"
        HeightRequest="50" WidthRequest="80" Grid.Column="0" Grid.Row="6"
            FontAttributes="Bold" FontSize="30" Padding="0"
    />
            <Button Clicked="Button_Clicked" Text="(" TextColor="Black"  BackgroundColor="Transparent"
        HeightRequest="50" WidthRequest="80" Grid.Column="2" Grid.Row="6"
            FontAttributes="Bold" FontSize="30" Padding="0"
    />
            <Button Clicked="Button_Clicked" Text=")" TextColor="Black"  BackgroundColor="Transparent"
        HeightRequest="50" WidthRequest="80" Grid.Column="3" Grid.Row="6"
            FontAttributes="Bold" FontSize="30" Padding="0"
    />
            <BoxView Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" VerticalOptions="End" HeightRequest="1" Margin="20,0,20,0" Color="Gray"/>
            <ScrollView Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" HorizontalOptions="Fill">
                <Grid Padding="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Label x:Name="ResultText" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="End" Text="" VerticalOptions="End" FontSize="35" FontAttributes="Bold"/>


                    <Label x:Name="TextOfTask" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,0" HorizontalOptions="End" Text="" VerticalOptions="End" FontSize="25" TextColor="#262626" FontAttributes="Bold"/>

                </Grid>
            </ScrollView>
        </Grid>

        <Grid x:Name="TransformGrid" Margin="0,0,0,15" IsVisible="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ImageButton BackgroundColor="Transparent" Margin="20"
                     Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
                     Source="calculate.svg" Clicked="Get_Calculate_Grid" 
/>
            <ImageButton Clicked="Get_transf_Grid" BackgroundColor="Transparent" Grid.ColumnSpan="2"
                     Grid.Column="1" Grid.Row="0" Margin="20"
                     Source="transf.svg"
/>
            <ImageButton BackgroundColor="Transparent" Grid.ColumnSpan="2"
                     Grid.Column="2" Grid.Row="0" Clicked="Get_Crypto_Grid"
                     Source="rub.svg" Margin="20"
/>

            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Image Source="square.svg" Grid.Column="0" VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Click_Image" />
                    </Image.GestureRecognizers>
                </Image>
                <Label Text="Площадь" VerticalOptions="End" HorizontalOptions="Center"/>

                <Image Source="data.svg" Grid.Column="1" VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Click_Image_Data" />
                    </Image.GestureRecognizers>
                </Image>
                <Label Text="Данные" Grid.Column="1"  VerticalOptions="End" HorizontalOptions="Center"/>

                <Image Source="length.svg" Grid.Column="2" Grid.Row="0" VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Click_Image_Lenght" />
                    </Image.GestureRecognizers>
                </Image>
                <Label Text="Длина" Grid.Column="2" Grid.Row="0" VerticalOptions="End" HorizontalOptions="Center"/>

                <Image Source="weight.svg" Grid.Column="0" Grid.Row="1" VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Click_Image_Weight" />
                    </Image.GestureRecognizers>
                </Image>
                <Label Text="Масса" Grid.Column="0" Grid.Row="1" VerticalOptions="End" HorizontalOptions="Center"/>

                <Image Source="system.svg" Grid.Column="1" Grid.Row="1" VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Click_Image_NumberS" />
                    </Image.GestureRecognizers>
                </Image>
                <Label Text="С. Счисления" Grid.Column="1" Grid.Row="1" VerticalOptions="End" HorizontalOptions="Center"/>

                <Image Source="speed.svg" Grid.Column="2" Grid.Row="1" VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Click_Image_Speed" />
                    </Image.GestureRecognizers>
                </Image>
                <Label Text="Скорость" Grid.Column="2" Grid.Row="1" VerticalOptions="End" HorizontalOptions="Center"/>

                <Image Source="temperature.svg" Opacity="0.3" Grid.Column="0" Grid.Row="2" VerticalOptions="Center"/>
                <Label Text="Температура⌛️" Grid.Column="0" Grid.Row="2" VerticalOptions="End" HorizontalOptions="Center"/>

                <Image Source="time.svg" Opacity="0.3" Grid.Column="1" Grid.Row="2" VerticalOptions="Center"/>
                <Label Text="Время⌛️" Grid.Column="1" Grid.Row="2" VerticalOptions="End" HorizontalOptions="Center"/>

                <Image Source="volume.svg" Opacity="0.3" Grid.Column="2" Grid.Row="2" VerticalOptions="Center"/>
                <Label Text="Обьем⌛️" Grid.Column="2" Grid.Row="2" VerticalOptions="End" HorizontalOptions="Center"/>



            </Grid>

        </Grid>

        <Grid x:Name="SquareGrid" IsVisible="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Image Source="arrow.svg" VerticalOptions="Center" HorizontalOptions="Start" Margin="10,10,0,0"
                       >
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Click_Back_square" />
                    </Image.GestureRecognizers>
                </Image>
                <Label Text="Площадь" HorizontalOptions="Center" VerticalOptions="Center"
                       FontSize="20" Grid.Column="0" Grid.ColumnSpan="4"
                />

                <Grid Grid.Row="1" Grid.Column="1" ColumnDefinitions="11*,7*" Margin="0,0,15,0">
                    <Label x:Name="ConvertOne" Text="км²" VerticalOptions="Center" HorizontalOptions="Center"
                           FontAttributes="Bold" FontSize="25"
                    >
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Click_Open_Type" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Image Source="pickerlist.svg" VerticalOptions="Center" HorizontalOptions="Center"
                           Grid.Column="1" >
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Click_Open_Type" />
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>

                <Image Source="swap.svg" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center"
                       Grid.Row="1" Grid.RowSpan="2">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Click_Swap" />
                    </Image.GestureRecognizers>
                </Image>

                <Grid Grid.Row="2" Grid.Column="1" ColumnDefinitions="11*,7*" Margin="0,0,15,0">

                    <Label x:Name="ConvertTwo" Text="м²" VerticalOptions="Center" HorizontalOptions="Center"
                           FontAttributes="Bold" FontSize="25"
                    >
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Click_Open_TypeTwo" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Image Source="pickerlist.svg" VerticalOptions="Center"
                           Grid.Column="1" >
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Click_Open_TypeTwo" />
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>

                <Label x:Name="TextCountSquare" Text="" Grid.Row="1" HorizontalOptions="Start" Margin="15,0,0,0" VerticalOptions="Center"
                       FontSize="30" />

                <Label x:Name="TextResultSquare" Text="" Grid.Row="2" HorizontalOptions="Start" Margin="15,0,0,0" VerticalOptions="Center"
                       FontSize="30" />

            </Grid>

            <Grid Grid.Row="1" Margin="0,0,15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Button Text="1" Grid.Row="0"
                        BackgroundColor="Transparent" TextColor="Black" 
                        FontSize="30" FontAttributes="Bold"
                        Clicked="Click_Number"
                        />
                <Button Text="2" Grid.Row="0" Grid.Column="1"
                        BackgroundColor="Transparent" TextColor="Black" 
                        FontSize="30" FontAttributes="Bold"
                        Clicked="Click_Number"
                />

                <Button Text="3" Grid.Row="0" Grid.Column="2"
                        BackgroundColor="Transparent" TextColor="Black" 
                        FontSize="30" FontAttributes="Bold"
                        Clicked="Click_Number"
                />

                <Button Text="4" Grid.Row="1" Grid.Column="0"
                        BackgroundColor="Transparent" TextColor="Black" 
                        FontSize="30" FontAttributes="Bold"
                        Clicked="Click_Number"
                />

                <Button Text="5" Grid.Row="1" Grid.Column="1"
                        BackgroundColor="Transparent" TextColor="Black" 
                        FontSize="30" FontAttributes="Bold"
                        Clicked="Click_Number"
                />

                <Button Text="6" Grid.Row="1" Grid.Column="2"
                        BackgroundColor="Transparent" TextColor="Black" 
                        FontSize="30" FontAttributes="Bold"
                        Clicked="Click_Number"
                />

                <Button Text="7" Grid.Row="2" Grid.Column="0"
                        BackgroundColor="Transparent" TextColor="Black" 
                        FontSize="30" FontAttributes="Bold"
                        Clicked="Click_Number"
                />

                <Button Text="8" Grid.Row="2" Grid.Column="1"
                        BackgroundColor="Transparent" TextColor="Black" 
                        FontSize="30" FontAttributes="Bold"
                        Clicked="Click_Number"
                />

                <Button Text="9" Grid.Row="2" Grid.Column="2"
                        BackgroundColor="Transparent" TextColor="Black" 
                        FontSize="30" FontAttributes="Bold"
                        Clicked="Click_Number"
                />

                <Button Text="0" Grid.Row="3" Grid.Column="1"
                        BackgroundColor="Transparent" TextColor="Black" 
                        FontSize="30" FontAttributes="Bold"
                        Clicked="Click_Number"
                />

                <Button Text="," Grid.Row="3" Grid.Column="2"
                        BackgroundColor="Transparent" TextColor="Black" 
                        FontSize="30" FontAttributes="Bold"
                        Clicked="Click_Number"
                />

                <ImageButton Source="delall.svg" CornerRadius="30"
                             Grid.Column="3" Grid.Row="0" Grid.RowSpan="2" Margin="0,10,0,10"
                             Clicked="Click_DelAll_Square" 
                             />

                <ImageButton Source="del.svg" CornerRadius="30"
                             Grid.Column="3" Grid.Row="2" Grid.RowSpan="2" Margin="0,10,0,10"
                             Clicked="Click_Del_Square"
                             />

                <BoxView Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" VerticalOptions="Start" HeightRequest="1" Margin="20,0,20,0" Color="Gray"/>




            </Grid>

            <Frame x:Name="FrameConvertType" IsVisible="false" Grid.Row="1" Grid.Column="0" BorderColor="#1C274C" BackgroundColor="White" CornerRadius="20">
                <VerticalStackLayout Spacing="23">
                    <Label Text="Квадратные километры [ КМ² ]" FontSize="18" HorizontalOptions="Center"
                           FontAttributes="Bold" TextColor="#1C274C">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Click_Parameter" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text="Гектары [ ГА ]" FontSize="18" HorizontalOptions="Center"
                           FontAttributes="Bold" TextColor="#1C274C">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Click_Parameter" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text="Квадратные метры [ М² ]" FontSize="18" HorizontalOptions="Center"
                           FontAttributes="Bold" TextColor="#1C274C">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Click_Parameter" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text="Квадратные дециметры [ ДМ² ]" FontSize="18" HorizontalOptions="Center"
                           FontAttributes="Bold" TextColor="#1C274C">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Click_Parameter" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text="Квадратные сантиметры [ СМ² ]" FontSize="18" HorizontalOptions="Center"
                           FontAttributes="Bold" TextColor="#1C274C">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Click_Parameter" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text="Квадратные миллиметры [ ММ² ]" FontSize="18" HorizontalOptions="Center"
                           FontAttributes="Bold" TextColor="#1C274C">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Click_Parameter" />
                        </Label.GestureRecognizers>
                    </Label>

                </VerticalStackLayout>
            </Frame>

            <Frame x:Name="FrameConvertTypeTwo" IsVisible="false" Grid.Row="1" Grid.Column="0" BorderColor="#1C274C" BackgroundColor="White" CornerRadius="20" >
                <VerticalStackLayout Spacing="23">
                    <Label Text="Квадратные километры [ КМ² ]" FontSize="18" HorizontalOptions="Center"
               FontAttributes="Bold" TextColor="#1C274C">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Click_ParameterTwo" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text="Гектары [ ГА ]" FontSize="18" HorizontalOptions="Center"
               FontAttributes="Bold" TextColor="#1C274C">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Click_ParameterTwo" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text="Квадратные метры [ М² ]" FontSize="18" HorizontalOptions="Center"
               FontAttributes="Bold" TextColor="#1C274C">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Click_ParameterTwo" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text="Квадратные дециметры [ ДМ² ]" FontSize="18" HorizontalOptions="Center"
