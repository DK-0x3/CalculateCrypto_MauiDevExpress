        <Grid x:Name="DataGrid" IsVisible="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Image Source="arrow.svg" VerticalOptions="Center" HorizontalOptions="Start" Margin="10,10,0,0"
               >
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Click_Back_Data" />
                    </Image.GestureRecognizers>
                </Image>
                <Label Text="Данные" HorizontalOptions="Center" VerticalOptions="Center"
               FontSize="20" Grid.Column="0" Grid.ColumnSpan="4"
