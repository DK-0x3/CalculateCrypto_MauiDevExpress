                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Click_ParameterTwo" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text="Квадратные сантиметры [ СМ² ]" FontSize="18" HorizontalOptions="Center"
               FontAttributes="Bold" TextColor="#1C274C">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Click_ParameterTwo" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text="Квадратные миллиметры [ ММ² ]" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#1C274C">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Click_ParameterTwo" />
                        </Label.GestureRecognizers>
                    </Label>

                </VerticalStackLayout>
            </Frame>

